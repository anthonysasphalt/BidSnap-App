{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/public",
  "installCommand": "pnpm install",
  "framework": null,
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/jobber/callback.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/trpc/(.*)", "destination": "/api" },
    { "source": "/api/health", "destination": "/api" },
    { "source": "/api/jobber/callback", "destination": "/api/jobber/callback" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
